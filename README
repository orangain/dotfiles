hg clone https://bitbucket.org/orangain/dotfiles dotfiles
ln -s dotfiles/vimfiles ~/.vim
ln -s dotfiles/_vimrc ~/.vimrc
ln -s dotfiles/_gvimrc ~/.gvimrc



